{
  "public": {
    "appName": "Hilltop Web",
    "version": "1.0.0",
    "environment": "production",
    "currency": {
      "default": "USD",
      "SKD_value": 2000,
      "mine_conversion": {
        "USD": 1,
        "NGN": 1600
      }
    },
    "mining": {
      "rate_per_second": "dynamic",
      "max_tokens_per_user": 21000000
    },
    "clientSettings": {
      "enableCache": true,
      "enableCompression": true
    }
  },

  "private": {
    "MONGO_URL": "mongodb+srv://USERNAME:PASSWORD@cluster0.mongodb.net/hilltopweb",
    "ROOT_URL": "https://yodhehwebz.meteorapp.com",

    "SECRET_KEY": "REPLACE_THIS_WITH_A_SECURE_RANDOM_KEY",
    "JWT_SECRET": "REPLACE_WITH_A_STRONG_TOKEN_STRING",

    "API_KEYS": {
      "MONIEPOINT_KEY": "REPLACE_THIS",
      "PAYSTACK_SECRET": "REPLACE_THIS",
      "MINE_APP_KEY": "REPLACE_THIS"
    },

    "ADMIN": {
      "email": "admin@hilltop.com",
      "username": "SASCommander",
      "forceSecurityMode": true
    },

    "limits": {
      "maxBuildRAM_MB": 1024,
      "timeoutSeconds": 120
    }
  },

  "debug": false
}
